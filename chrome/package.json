{
    "name": "chrome",
    "version": "1.0.0",
    "main": "content.js",
    "scripts": {
        "build:content": "vite build --config vite.config.content.js",
        "build:background": "vite build --config vite.config.background.js",
        "build:all": "npm run build:content && npm run build:background",
        "clean-package": "rimraf chrome-extension-build",
        "copy-files": "cpx \"dist/**/*\" chrome-extension-build && cpx \"icons/**/*\" chrome-extension-build/icons",
        "update-manifest": "node scripts/update-manifest.js",
        "zip-extension": "node scripts/zip.js",
        "package": "npm run clean-package && npm run copy-files && npm run update-manifest && npm run zip-extension",
        "build:prod": "npm run build:all && npm run package",
        "dev:content": "vite build --config vite.config.content.js --watch",
        "dev:background": "vite build --config vite.config.background.js --watch",
        "dev": "npm-run-all --parallel dev:content dev:background"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "@headlessui/react": "^2.2.7",
        "@material/ripple": "^14.0.0",
        "firebase": "^12.2.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-spinners": "^0.17.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^5.0.2",
        "archiver": "^7.0.1",
        "cpx": "^1.5.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^6.0.1",
        "vite": "^7.1.3"
    }
}